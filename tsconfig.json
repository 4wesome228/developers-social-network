{
  "compilerOptions": {
    "outDir": "./client/dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./client/src",
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["DOM"]
  },
  "exclude": ["node_modules"],
  "include": ["client/src/**/*.tsx"]
}
